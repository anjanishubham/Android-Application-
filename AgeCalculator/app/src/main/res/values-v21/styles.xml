<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless.Colored">

        <item name="android:colorButtonNormal">@color/colorNormalButton</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">10dp</item>
    </style>

    <style name="AppTheme.CardView" parent="Base.CardView">

        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>

    </style>

    <style name="imageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>

        <item name="android:backgroundTint">@color/colorPrimary</item>

    </style>
</resources>