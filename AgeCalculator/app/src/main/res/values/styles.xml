<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless.Colored">

        <item name="android:colorButtonNormal" tools:ignore="NewApi">@color/colorNormalButton</item>

    </style>


    <style name="Textview_label">




    </style>


    <style name="TextView_style1">

        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:textColorHint">@color/colorHintTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorBackground">@color/colorTextViewBackgroudColor</item>

    </style>
    <style name="TextView_label_style">
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextViewLabel</item>
        <item name="android:textColorHint">@color/colorHintTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextView_style2">

        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:textColorHint">@color/colorHintTextColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="imageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/colorTextViewLabel</item>

    </style>

</resources>
